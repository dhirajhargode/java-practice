<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="bfp"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="trimValues" value="true" />
		<property name="locations">
			<list>
				<value>db.properties</value>
				<value>mail.properties</value>
			</list>
		</property>
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="ignoreResourceNotFound" value="true" />

	</bean>

	<bean id="conProvider" class="com.bfp.beans.ConnectionProvider">
		<constructor-arg name="driverCls" value="${driver}" />
		<constructor-arg name="pwd" value="${pwd}" />
		<constructor-arg name="url" value="${url}" />
		<constructor-arg name="uname" value="${uname}" />
	</bean>
</beans>
