<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="c" class="com.don.beans.Cache" />

	<bean id="cManager" class="com.don.beans.CacheManager">
		<constructor-arg name="cache" ref="c" />
		<constructor-arg name="fileName" value="companies_ri" />
	</bean>

	<bean id="emiCalc" 
		class="com.don.beans.PersonalLoanEmiCalculator"
		depends-on="cManager">
		<property name="cache" ref="c" />
	</bean>
</beans>
