<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="car" class="com.dhiraj.spring.Car">
		<constructor-arg ref="engine2" />
	</bean>
	<bean id="engine1" class="com.dhiraj.spring.StartEngine" />
	<bean id="engine2" class="com.dhiraj.spring.NoFuel" />
	<bean id="engine3" class="com.dhiraj.spring.CallMechanic" />
	<bean id="engine4" class="com.dhiraj.spring.StartEngineAgain" />
</beans>
