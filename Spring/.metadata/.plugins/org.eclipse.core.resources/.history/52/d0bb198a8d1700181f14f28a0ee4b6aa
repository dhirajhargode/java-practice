	public Book findBookId(int bid) {
		return (Book) jdbctemplete.queryForObject(Find_By_ID, new Object[] { bid }, new BookMapper());
	}

	public void setJdbctemplete(JdbcTemplate jdbctemplete) {
		this.jdbctemplete = jdbctemplete;
	}

