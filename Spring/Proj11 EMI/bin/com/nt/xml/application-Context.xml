<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	
	<bean id="ppc"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="com/nt/commons/db.properties" />
	</bean>

	<bean id="pd" class="com.nt.beans.PropertiesReader">

		<property name="ibm" value="${ibm}" />
		<property name="ms" value="${ms}" />
		<property name="oracle" value="${oracle}" />

	</bean>


	<bean id="int" class="com.nt.beans.InterestCal">
		<property name="pop" ref="pd"></property>
	</bean>

</beans>
