<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="pFactory" class="com.ifd.beans.PrinterFactory"/>
	
	
	<bean id="printer" class="com.ifd.beans.Printer" factory-bean="pFactory" factory-method="createPrinter">
		<property name="id" value="101"/>
		<property name="name" value="Dhiraj"></property>

	</bean>
 	
 	<bean id="atm" class="com.ifd.beans.ATM">
 		<property name="printer" ref="printer"></property>
 	</bean>

</beans>
