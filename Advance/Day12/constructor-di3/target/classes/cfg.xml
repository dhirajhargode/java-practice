<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">


	<bean
	 id="myColl" 
	 class="serv.CollBean">
	 
	 <constructor-arg>
	 	<list>
	 		<value>emp.hbm.xml</value>
	 		<value>std.hbm.xml</value>
	 		<value>addr.hbm.xml</value>
	 	</list>
	 </constructor-arg>
	 <constructor-arg>
	 	<props>
	 		<prop key="dilect">mysql</prop>
	 		<prop key="show_sql">true</prop>
	 		<prop key="ddl2AutoCommit">update</prop>
	 	</props>
	 </constructor-arg>
	 <constructor-arg>
	 	<map>
	 		<entry key="driver_class" value="com.mysql.jdbc.Driver" ></entry>
	 		<entry key="driver_class" value="jdbc:mysql://locahost:3306/db" ></entry>
	 	</map>
	 </constructor-arg>
	 
	 
	 </bean>
	
</beans>
